@page
@model WebApp1.Pages.Cars.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Add Car</h2>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Car.Make" class="control-label"></label>
                @*SELECT MAKE*@ 
                <select asp-for="Car.Make" id="selectMake"  class="form-control" onchange="populate('selectMake', 'selectModel')">
                    <option value=""></option>
                    <option value="Audi">Audi</option>
                    <option value="BMW">BMW</option>
                    <option value="Mercedes-Benz">Mercedes-Benz</option>
                    <option value="Volvo">Volvo</option>
                    <option value="VW">Volkswagen</option>
                </select>
                <span asp-validation-for="Car.Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Model" class="control-label"></label>
                @*SELECT MODEL*@
                <select asp-for="Car.Model" id="selectModel"  class="form-control">
                    <option value=""></option>
                </select>
                <span asp-validation-for="Car.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Year" class="control-label"></label>
                <input asp-for="Car.Year" class="form-control" />
                <span asp-validation-for="Car.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Fuel" class="control-label"></label>
                <select asp-for="Car.Fuel" class="form-control">
                    <option value="Diesel">Diesel</option>
                    <option value="Petrol">Petrol</option>
                    <option value="Electric">Electric</option>
                    <option value="Hybrid">Hybrid</option>
                </select>
                <span asp-validation-for="Car.Fuel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Kilometer" class="control-label"></label>
                <input asp-for="Car.Kilometer" class="form-control" />
                <span asp-validation-for="Car.Kilometer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Horsepower" class="control-label"></label>
                <input asp-for="Car.Horsepower" class="form-control" />
                <span asp-validation-for="Car.Horsepower" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Colour" class="control-label"></label>
                <input asp-for="Car.Colour" class="form-control" />
                <span asp-validation-for="Car.Colour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Price" class="control-label"></label>
                <input asp-for="Car.Price" class="form-control" />
                <span asp-validation-for="Car.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
